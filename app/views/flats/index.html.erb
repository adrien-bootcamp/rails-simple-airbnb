<div class="container mt-3">
  <h1>All of our flats (<%= @flats.length %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-12 col-md-6">
        <div class="card m-3 bg-light border">
          <img src="https://picsum.photos/id/101/350/200" alt="#" style="object-fit: none;">
          <div class="text pl-3 pt-3">
            <h3><%= flat.name %></h3>
            <p><%= flat.address %></p>
            <div class="d-flex">
              <div class="d-flex mr-2">
                <h4><%= flat.number_of_guests %></h4>
                <i class="fas fa-user-friends"></i>
              </div>
              <div class="d-flex">
                <h4><%= flat.price_per_night %></h4>
                <i class="fas fa-euro-sign"></i>
              </div>
            </div>
          </div>
          <div class="p-2 bg-white d-flex justify-content-around">
            <%= link_to "More info", flat_path(flat), class:"text-primary" %>
            <%= link_to "Edit", flat_path(flat), class:"text-warning" %>
            <%= link_to "Remouve", flat_path(flat), class:"text-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
